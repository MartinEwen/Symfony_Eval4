{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}

    <h1>Contact</h1>

    <table class="table">

        <thead>

            <tr>
                <th>Id</th>
                <th>NameContact</th>
                <th>MailContact</th>
                <th>TextContact</th>
                <th>actions</th>
            </tr>

        </thead>

        <tbody>

        {% for contact in contacts %}

            <tr>

                <td>{{ contact.id }}</td>

                <td>{{ contact.nameContact }}</td>

                <td>{{ contact.mailContact }}</td>

                <td>{{ contact.textContact }}</td>

                <td>
                    <a href="{{ path('contact_show', {'id': contact.id}) }}">show</a>
                    <a href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>
                </td>

            </tr>

        {% else %}

            <tr>
                <td colspan="5">no records found</td>
            </tr>

        {% endfor %}

        </tbody>

    </table>

    <a href="{{ path('contact_new') }}">Create new</a>
    
{% endblock %}
